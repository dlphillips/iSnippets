@model iSnippets.Models.Snippet

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<form asp-action="Edit">
    <div class="form-horizontal">
        <h4>Snippet</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <label asp-for="snipDesc" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="snipDesc" class="form-control" />
                <span asp-validation-for="snipDesc" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="snipText" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <textarea asp-for="snipText" rows="20" class="form-control snipText"></textarea>
                <span asp-validation-for="snipText" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="snipLang" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="snipLang" class="form-control" />
                <span asp-validation-for="snipLang" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

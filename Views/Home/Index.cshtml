@{
    ViewData["Title"] = "Home Page";
}

<div class="container">

    <div class="jumbotron">
        <h1>Snippet Keeper</h1> 
        <p></p> 
    </div>

<form>
  <p>
    <label for="LangSearch">Language:</label>
    <input type="text" name="LangSearch" />
  </p>
  <p>
    <label for="DescSearch">Description:</label>
    <input type="text" name="DescSearch" />
  </p>
  <input type="submit" value="Filter" />
</form>

    <table class="table table-striped table-bordered table-hover">
        <thead>
        <tr>
            <th>Description</th>
            <th>Language</th>
            <th>Snippet</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model) {
        <tr>
            <td>@item.snipDesc</td>
            <td>@item.snipLang</td>
            <td>@item.snipText</td>
        </tr>
        }
        </tbody>
    </table>
    </div>

    <div class="row">
        <div class="col-md-6">
            <form class="">
                <div class="form-group">
                    <label for="snipDesc">Title:</label>
                    <input type="text" class="form-control" id="snipDesc">
                </div>
                <div class="form-group">
                    <label for="snipLang">Language:</label>
                    <input type="text" class="form-control" id="snipLang">
                </div>
                <div class="form-group">
                    <label for="snipText">Snippet:</label>
                    <textarea class="form-control" rows="5" id="snipText"></textarea>
                </div>
            </form>
        </div>
    </div>

